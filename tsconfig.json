{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "build",
    "target": "es2020",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declarationMap": true
  },
  "include": [
    "src/"
  ]
}
